<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약이름"
            android:textSize="17sp"
            android:textColor="#000"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp">

        <TextView
            android:id="@+id/medicine_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제약회사"
            android:textSize="14sp"
            android:textColor="#444"
            android:maxLines="1"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/medicine_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/medicine_contents_efficacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약효능"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_use"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 사용"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_know1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 주의사항1"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_know2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 주의사항2"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_knowMedi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 내용알기"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_sideEffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 부작용"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <TextView
                android:id="@+id/medicine_contents_keep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="약 보관법"
                android:textColor="#000"
                android:textSize="16sp">
            </TextView>
            <Button
                android:id="@+id/save_medicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="복용저장"
                android:layout_gravity="center">
            </Button>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:background="#aaa"/>

</LinearLayout>